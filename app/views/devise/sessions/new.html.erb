<div class="row">
  <div class="cold-md-4" id="titleContainer">
    <h2 id="title">Log In</h2>
  </div>
</div>


<div class="row">
  <div class="col-md-4" id="logInForm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "control-label"%>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  #title {
    color: white;
  }

  #titleContainer {
    position: relative;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;	
	  margin: auto;
  }

  #logInForm {
    position: relative;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;	
	  margin: auto;
  }

  .form-group {
    color: white;
  }
</style>
